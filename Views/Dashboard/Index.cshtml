@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using DameUnaIP.Models
@model DameUnaIP.Models.DashboardModel

<div class="row">
    <div class="col-lg-12">
        <h2>Dashboard</h2>
        <hr />
    </div>
</div>
